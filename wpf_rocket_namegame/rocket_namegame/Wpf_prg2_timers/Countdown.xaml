<Window x:Class="Wpf_prg2_timers.Countdown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_prg2_timers"
        mc:Ignorable="d"
        Title="Countdown" Height="450" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush RadiusY="1" RadiusX="1" Center="0.5,0.5">
                <GradientStop Color="White" Offset="0" />
                <GradientStop Color="MidnightBlue" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="txtNumber" Text="10" FontSize="150" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <WrapPanel HorizontalAlignment="Center">
                <Label Content="Naam:  " FontSize="24"/>
                <TextBox x:Name="txtName" Width="200" FontSize="24"/>
                <Button x:Name="btnOK" Content="OK" Width="50" Click="btnOK_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
