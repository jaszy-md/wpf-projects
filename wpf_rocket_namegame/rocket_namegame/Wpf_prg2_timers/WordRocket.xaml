<Window x:Class="Wpf_prg2_timers.WordRocket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_prg2_timers"
        mc:Ignorable="d"
        Title="WordRocket" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/planets.png"/>
        </Grid.Background>
        <TextBox x:Name="txtWordToCheck" HorizontalAlignment="Center" Height="53" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Bottom" TextChanged="txtWordToCheck_TextChanged" FontFamily="Showcard Gothic" FontSize="36" Width="300" Opacity="0.6"/>
        <Label x:Name="lblWord" Content="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="20" FontFamily="Showcard Gothic" Foreground="#FF080808" Width="200" Height="60">
            <Label.Background>
                <ImageBrush ImageSource="Resources/raket.png"/>
            </Label.Background>
        </Label>
        <Rectangle x:Name="rEndGame" HorizontalAlignment="Right" Margin="0,0,0,0" Stroke="Black" Width="100" VerticalAlignment="Stretch" RadiusY="0" RadiusX="0" Fill="Black"/>
        <Label x:Name="lblName" Content="" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Width="100" Margin="0,30,0,0" Foreground="#FFFFFF" FontFamily="Showcard Gothic" FontSize="24"/>
        <Label x:Name="lblNrCorrect" Content="0" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Width="100" Margin="0,60,0,0" Foreground="#FFFFFF" FontFamily="Showcard Gothic" FontSize="24"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Width="363" Height="118" Click="btnStart_Click" Margin="0,0,0,0" FontFamily="Showcard Gothic" FontSize="48"/>

    </Grid>
</Window>
