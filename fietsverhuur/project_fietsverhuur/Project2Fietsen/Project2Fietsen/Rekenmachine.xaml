<Window x:Class="Project2Fietsen.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project2Fietsen"
        mc:Ignorable="d"
        Title="Rekenmachine" Height="450" Width="350" Background="DarkGray" >


    <Grid Margin="0,0,0,4">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23"/>
            <ColumnDefinition Width="79"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="62"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Border 
                    Grid.Column="1"
                    Grid.ColumnSpan="4"
                    Background="Beige"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="5">

            <TextBlock x:Name="tbTotal"
                   Background="FloralWhite"
                   Grid.ColumnSpan="4"
                   Grid.Row="1"
                   TextAlignment="Right"
                   FontSize="20px"
                   >0

            </TextBlock>
        </Border>
        <Border 
                    Grid.Column="1"
                    Grid.Row="1"
                    Grid.RowSpan="4"
                    Grid.ColumnSpan="5"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="5">
            
            
        </Border>
        <Button x:Name="btn7" 
                Grid.Column="1"
                Grid.Row="1"
                
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click"
               >7
        </Button>
        <Button x:Name="btn4"
                Grid.Column="1"
                Grid.Row="2"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click" 
                >4
        </Button>
        <Button x:Name="btn1"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click"
               >1
        </Button>

        <Button x:Name="btnclear"
                Grid.Column="1"
                Grid.Row="4"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btClear_Click" 
                >C
        </Button>

        <Button x:Name="btn8" 
                Grid.Column="2"
                Grid.Row="1"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click" 
                >8
        </Button>
        <Button x:Name="btn5"
                Grid.Column="2" 
                Grid.Row="2"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click"
                >5
        </Button>
        <Button x:Name="btn2"
                Grid.Column="2"
                Grid.Row="3"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click"
                >2
        </Button>
        <Button x:Name="btn0"
                Grid.Column="2"
                Grid.Row="4"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click"
               >0
        </Button>


        <Button x:Name="btn9" 
                Grid.Column="3"
                Grid.Row="1"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click" 
                >9
        </Button>
        <Button x:Name="btn6"
                Grid.Column="3"
                Grid.Row="2"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click"
                >6
        </Button>
        <Button x:Name="btn3"
                Grid.Column="3"
                Grid.Row="3"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue"
                Click="btNumber_Click" 
                >3
        </Button>
        <Button x:Name="btnkomma"
                Grid.Column="3"
                Grid.Row="4"
                FontSize="20"
                FontWeight="Bold"
                Background="DodgerBlue" 
                >,
        </Button>
        

        <Button x:Name="btnkeer"
                Grid.Column="4"
                Grid.Row="2"
                 Foreground="LightBlue"
                FontSize="20"
                FontWeight="Bold"
                Background="DarkBlue" 
                Click="btnKeer_Click" 
                >*
        </Button>
        <Button x:Name="btnmin"
                Grid.Column="4"
                Grid.Row="3"
                 Foreground="LightBlue"
                FontSize="20"
                FontWeight="Bold"
                Background="DarkBlue" 
                Click="btnmin_Click"
                >-
        </Button>
        <Button x:Name="btndelen"
                Grid.Column="4"
                Grid.Row="4"
                Background="DarkBlue" 
                 Foreground="LightBlue"
                FontSize="20"
                FontWeight="Bold"
                Click="btnDelen_Click" 
                >/
        </Button>
        <Button x:Name="btnplus"
                Grid.Column="4" 
                Grid.Row="1"
                Background="DarkBlue" 
                Foreground="LightBlue"
                FontSize="20"
                FontWeight="Bold"
                Click="btnPlus_Click"  
                >+
        </Button>
        <Button x:Name="btnResult"
                Grid.Column="4"
                Grid.Row="5"
                Foreground="LightBlue"
                FontSize="20"
                FontWeight="Bold"
                Background="MidnightBlue" 
                Click="btnResult_Click" 
                
                >=
        </Button>



    </Grid>
</Window>
