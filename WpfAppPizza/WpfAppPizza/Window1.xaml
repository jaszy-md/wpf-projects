<Window x:Class="WpfAppPizza.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPizza"
        mc:Ignorable="d"
        Title="Window1" Height="242" Width="345" >
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="152*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <TextBlock 
            x:Name="tbError1"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="19"  
            Width="240"
            FontSize="13"
            FontWeight="Black"
            FontStyle="Italic"
            Margin="85,31,0,0" 
            Grid.ColumnSpan="2" Foreground="Black"
            >
            De volgende fouten zijn opgetreden:
        </TextBlock>
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Arial"
                FontSize="18"
                Margin="138,166,0,0"
                Width="98"
                Height="24"
                Background="Gray" 
                Foreground="White"
                Click="ButtonOK_Click" Grid.ColumnSpan="2"
                
                >OK
        </Button>
        <Image Margin="0,18,88,152" Source="/warning.png" Stretch="Fill"/>
        <Image Margin="0,125,54,10" Source="/pizzaaman.jpg" Stretch="Fill"/>
        <TextBlock 
            x:Name="tbError"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="95"  
            Width="246"
            FontSize="13"
            FontStyle="Italic"
            Margin="89,66,0,0" Grid.ColumnSpan="5" Foreground="#FFE91A1A"
            >TEST
        </TextBlock>
    </Grid>
</Window>
