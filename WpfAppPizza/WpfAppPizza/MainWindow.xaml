<Window x:Class="WpfAppPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPizza"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="700">
    <Grid>
        <Grid.Background>
            <ImageBrush  ImageSource="Pizzaform.jpg" Stretch="Fill" />
        </Grid.Background>
        <TextBlock 
            Height="425" 
            Width="597" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Background="White" 
            Margin="0,49,48.6,0"
            Opacity="0.8">
        </TextBlock>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="65"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="61,61,0,0">
            Naam:
        </TextBlock>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="65"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="61,83,0,0">
            Adres:
        </TextBlock>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="75"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="61,105,0,0">
            Pcd/Plaats:
        </TextBlock>
        <TextBox 
            x:Name="tbnaam"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="179,61,0,0" 
            Height="20"  
            Width="177"
             BorderBrush="Gray"
            BorderThickness="1"
            Background="Transparent">
        </TextBox>
        <TextBox x:Name="tbAdres" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="179,83,0,0" 
            Height="20"  
            Width="177"
            BorderBrush="Gray"
            BorderThickness="1"
            Background="Transparent">
        </TextBox>
        <TextBox 
            x:Name="tbpostcode"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="179,105,0,0" 
            Height="20"  
            Width="63"
            BorderBrush="Gray"
            BorderThickness="1"
            Background="Transparent">
        </TextBox>
        <TextBox 
             x:Name="tbplaats"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="245,105,0,0" 
            Height="20"  
            Width="111"
            BorderBrush="Gray"
            BorderThickness="1"
            Background="Transparent">
        </TextBox>
        <ComboBox 
            x:Name="cmbPizzaPasta" 
            HorizontalAlignment="Left" 
            Margin="179,144,0,0" 
            VerticalAlignment="Top" 
            Width="128" 
            Height="25"
            Foreground="Black"
            BorderBrush="Black"
            BorderThickness="2"
            Opacity="0.3"
            SelectionChanged="cmbPizzaPasta_SelectionChanged">


            <ComboBoxItem x:Name="hawaii" Content="Pizza Hawaii"/>
            <ComboBoxItem x:Name="margaritha" Content="Pizza Margaritha"/>
            <ComboBoxItem x:Name="peperone" Content="Pizza Peperone"/>
            <ComboBoxItem x:Name="funghi" Content="Pizza Funghi"/>
            <ComboBoxItem x:Name="quattro" Content="Pizza Quattro Stagioni"/>
            <ComboBoxItem x:Name="calzone" Content="Pizza Calzone"/>
            <ComboBoxItem x:Name="prosciutto" Content="Pizza Prosciutto"/>
            <ComboBoxItem x:Name="diavola" Content="Pizza Diavola"/>
            <ComboBoxItem x:Name="napolitana" Content="Pizza Napolitana"/>
            <ComboBoxItem x:Name="tonno" Content="Pizza Tonno (e cipolla)"/>
            <ComboBoxItem x:Name="frute" Content="Pizza Frute di Mare"/>
            <ComboBoxItem x:Name="macaroni" Content="Macaroni Bolognese"/>
            <ComboBoxItem x:Name="farfalle" Content="Farfalle Gorgonzola"/>
            <ComboBoxItem x:Name="spaghetti" Content="Spaghetti Vongole"/>
            <ComboBoxItem x:Name="fusilli" Content="Fusilli Pesto"/>
            <ComboBoxItem x:Name="lasagne" Content="Lasagne Classico"/>
        </ComboBox>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="40"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="312,144,0,0">
            Prijs 
        </TextBlock>
        <TextBlock 
            x:Name="tbPrijs"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            FontStyle="Italic"
            Height="20"  
            Width="75"
            FontSize="13"
            Margin="355,146,0,0">
            € 0,00
        </TextBlock>

        <TextBlock 
            x:Name="tbFormaat"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="75"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="61,190,0,0">
            Formaat
        </TextBlock>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="65"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="61,225,0,0">
            Aantal
        </TextBlock>
        <TextBox 
            x:Name="tbAantal"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="179,228,0,0" 
            Height="20"  
            Width="128"
            TextChanged="textchanged"
            BorderBrush="Gray"
            BorderThickness="1"
            Background="Transparent">
        </TextBox>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="80"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="61,250,0,0">
            Totaalbedrag
        </TextBlock>
        <StackPanel x:Name="spFormaat">
        <RadioButton
            GroupName="formaatpizza" 
            x:Name="rb25Cm"
            Content="25cm"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="15"
            Margin="179,190,0,0"
            Width="50"
            Checked="rb25checked"
            
            
            />

        <RadioButton
            GroupName="formaatpizza" 
            x:Name="rb35Cm"
            Content="35cm"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="15"
            Margin="179,0,0,0"
            Width="50"  
            Checked="rb35checked"
            />
</StackPanel>
        <TextBlock 
            x:Name="tbtoevoegen"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="75"
            FontSize="13"
            FontStyle="Italic"
            Margin="179,250,0,0"
            >
            € 0,00
        </TextBlock>
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Blackadder ITC"
                FontSize="18"
                Margin="179,290,0,0"
                Width="128"
                Height="24"
                Background="Black" 
                Foreground="White"
                Click="btToevoegen_click"
                
                >Toevoegen
        </Button>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="65"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="468,61,0,0">
            Overzicht
        </TextBlock>
        <ListBox 
            x:Name="lbLijst"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="468,86,0,0" 
            Height="290"  
            Width="157"
            BorderBrush="Black"
            BorderThickness="1"
            Background="Transparent"
            Foreground="Black"
            MouseDoubleClick="doublemouse_Click">
        </ListBox>
        <TextBlock 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="46"
            FontSize="18"
            FontFamily="Blackadder ITC"
            Margin="545,379,0,0">
            Totaal
        </TextBlock>
        <TextBlock 
            x:Name="tbtotaalOverzicht"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Height="20"  
            Width="37"
            FontSize="13"
            FontStyle="Italic"
            Margin="588,381,0,0">
            € 0,00
        </TextBlock>
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Blackadder ITC"
                FontSize="18"
                Margin="468,405,0,0"
                Width="157"
                Height="24"
                Background="Black" 
                Foreground="White"
                Click="Button_Click"
                >Betalen
        </Button>
    </Grid>
</Window>
